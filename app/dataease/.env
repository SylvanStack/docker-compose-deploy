# DataEase 配置文件 - 使用外部 MySQL
# 请根据实际情况修改以下配置

# ==================== 基础配置 ====================
# 数据存储目录（Windows 路径格式，Linux 使用 /opt/dataease）
DE_BASE=/opt/docker_volume/dataease

# DataEase 访问端口
DE_PORT=8100

# 应用上下文路径（如需要子路径访问，如 /dataease）
DE_CONTEXT_PATH=

# 登录超时时间（分钟）
DE_LOGIN_TIMEOUT=480

# ==================== 外部 MySQL 配置 ====================
DE_MYSQL_HOST=mysql

# MySQL 端口
DE_MYSQL_PORT=3306

# 数据库名
DE_MYSQL_DB=dataease

# 数据库用户名
DE_MYSQL_USER=root

# 数据库密码
DE_MYSQL_PASSWORD=123456

# 数据库连接参数
DE_MYSQL_PARAMS=autoReconnect=false&useUnicode=true&characterEncoding=UTF-8&characterSetResults=UTF-8&zeroDateTimeBehavior=convertToNull&useSSL=false&allowPublicKeyRetrieval=true

# ==================== 导出限制配置 ====================
DE_EXPORT_VIEWS_LIMIT=100000
DE_EXPORT_DATASET_LIMIT=100000

# ==================== 其他配置 ====================
DE_ORIGIN_LIST=http://localhost:8000

# Selenium 服务地址（用于定时报告）
DE_SELENIUM_SERVER=http://de-selenium:4444/wd/hub

# Selenium 资源限制
DE_SELENIUM_CPU_LIMIT=1
DE_SELENIUM_MEM_LIMIT=2g

# 服务器列表
DE_SERVERS=dataease
